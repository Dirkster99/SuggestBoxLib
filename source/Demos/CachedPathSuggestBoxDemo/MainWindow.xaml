<Window
	x:Class="CachedPathSuggestBoxDemo.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:suggestBoxLib="clr-namespace:SuggestBoxLib;assembly=SuggestBoxLib"
	Title="MainWindow"
	Width="800"
	Height="450"
	mc:Ignorable="d">
	<Grid Height="50" HorizontalAlignment="Center">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="Auto" />
			<ColumnDefinition Width="Auto" />
		</Grid.ColumnDefinitions>
		<suggestBoxLib:SuggestBox
			x:Name="DiskPathSuggestBox"
			Grid.Column="0"
			Width="400"
			Margin="5"
			FontSize="14"
			Hint="Enter a file system path"
			Text="{Binding Text}" />
		<Button
			Grid.Column="1"
			Width="100"
			Margin="5"
			Click="ButtonBase_OnClick"
			Content="Save"
			FontSize="20"
			FontWeight="Bold" />
	</Grid>
</Window>
