<Window x:Class="CachedPathSuggestBoxDemo.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:suggestBoxLib="clr-namespace:SuggestBoxLib;assembly=SuggestBoxLib"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid Height="50" HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <suggestBoxLib:SuggestBox Grid.Column="0"
                                  Width="400"
                                  x:Name="DiskPathSuggestBox"
                                  Hint="Enter a file system path"
                                  FontSize="14"
                                  Text="{Binding Text}"
                                  Margin="5" />
        <Button Width="100" Grid.Column="1" Content="Save" FontSize="20" FontWeight="Bold" Margin="5" Click="ButtonBase_OnClick">

        </Button>
    </Grid>
</Window>
